<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="000000000000-1" author="amaire">
        <preConditions onFail="CONTINUE">
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_user_user_preference" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_expense_user" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_expense_category_user" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_budget_user" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_budget_has_expense_budget" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_budget_has_expense_category" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_expense_has_category_expense" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_expense_has_category_category" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_income_user" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_income_has_category_income" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_income_has_category_category" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_expense_user_preference" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_income_user_preference" />
            </or>
            <or>
                <foreignKeyConstraintExists foreignKeyName="fk_category_user" />
            </or>
        </preConditions>
        
        <!-- User Preferences Table -->
        <createTable ifNotExists="true" tableName="user_preference">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user_preference"/>
            </column>
            <column name="theme" type="varchar(10)" defaultValue="LIGHT">
                <constraints nullable="false"/>
            </column>
            <column name="period_type" type="varchar(10)" defaultValue="MONTHLY">
                <constraints nullable="false"/>
            </column>
            <column name="edit_warn" type="tinyint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- User Table -->
        <createTable ifNotExists="true" tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
            </column>
            <column name="email" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="user_preference_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_preference_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="user" baseColumnNames="user_preference_id"
            constraintName="fk_user_user_preference" referencedTableName="user_preference"
            referencedColumnNames="id"
        />

        <createIndex tableName="user" indexName="fk_user_user_preference_idx" unique="false">
            <column name="user_preference_id"/>
        </createIndex>

        <!-- Expense Table -->
        <createTable ifNotExists="true" tableName="expense">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_id" nullable="false"/>
            </column>
            <column name="user_user_preference_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_user_preference_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="expense" baseColumnNames="user_id, user_user_preference_id"
            constraintName="fk_expense_user" referencedTableName="user"
            referencedColumnNames="id, user_preference_id"
        />

        <createIndex tableName="expense" indexName="fk_expense_user_idx" unique="false">
            <column name="user_id"/>
            <column name="user_user_preference_id"/>
        </createIndex>

        <!-- Category Table -->
        <createTable ifNotExists="true" tableName="category">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_category"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="category" baseColumnNames="user_id"
            constraintName="fk_expense_category_user" referencedTableName="user"
            referencedColumnNames="id"
        />

        <createIndex tableName="category" indexName="fk_expense_category_user_idx" unique="false">
            <column name="user_id"/>
        </createIndex>

        <!-- Budget Table -->
        <createTable ifNotExists="true" tableName="budget">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
            </column>
            <column name="max_amount" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_id" nullable="false"/>
            </column>
            <column name="user_user_preference_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_user_preference_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="budget" baseColumnNames="user_id, user_user_preference_id"
            constraintName="fk_budget_user" referencedTableName="user"
            referencedColumnNames="id, user_preference_id"
        />

        <createIndex tableName="budget" indexName="fk_budget_user_idx" unique="false">
            <column name="user_id"/>
            <column name="user_user_preference_id"/>
        </createIndex>

        <!-- Budget Has Category Table -->
        <createTable ifNotExists="true" tableName="budget_has_category">
            <column name="budget_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_budget_id" nullable="false"/>
            </column>
            <column name="category_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_category_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="budget_has_category" baseColumnNames="budget_id"
            constraintName="fk_budget_has_expense_budget" referencedTableName="budget"
            referencedColumnNames="id"
        />

        <addForeignKeyConstraint
            baseTableName="budget_has_category" baseColumnNames="category_id"
            constraintName="fk_budget_has_expense_category" referencedTableName="category"
            referencedColumnNames="id"
        />

        <!-- Expense Has Category Table -->
        <createTable ifNotExists="true" tableName="expense_has_category">
            <column name="expense_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_expense_id" nullable="false"/>
            </column>
            <column name="category_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_category_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="expense_has_category" baseColumnNames="expense_id"
            constraintName="fk_expense_has_category_expense" referencedTableName="expense"
            referencedColumnNames="id"
        />

        <addForeignKeyConstraint
            baseTableName="expense_has_category" baseColumnNames="category_id"
            constraintName="fk_expense_has_category_category" referencedTableName="category"
            referencedColumnNames="id"
        />

        <!-- Income Table -->
        <createTable ifNotExists="true" tableName="income">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_id" nullable="false"/>
            </column>
            <column name="user_user_preference_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_user_user_preference_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="income" baseColumnNames="user_id, user_user_preference_id"
            constraintName="fk_income_user" referencedTableName="user"
            referencedColumnNames="id, user_preference_id"
        />

        <createIndex tableName="income" indexName="fk_income_user_idx" unique="false">
            <column name="user_id"/>
            <column name="user_user_preference_id"/>
        </createIndex>

        <!-- Income Has Category Table -->
        <createTable tableName="income_has_category">
            <column name="income_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_income_id" nullable="false"/>
            </column>
            <column name="category_id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_category_id" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="income_has_category" baseColumnNames="income_id"
            constraintName="fk_income_has_category_income" referencedTableName="income"
            referencedColumnNames="id"
        />

        <addForeignKeyConstraint
            baseTableName="income_has_category" baseColumnNames="category_id"
            constraintName="fk_income_has_category_category" referencedTableName="category"
            referencedColumnNames="id"
        />

        <!-- Triggers -->
        <sql>
            delimiter $$
            USE `budgetdb`$$
            CREATE DEFINER = CURRENT_USER TRIGGER `budgetdb`.`expense_BEFORE_INSERT` BEFORE INSERT ON `expense` FOR EACH ROW
                        BEGIN
                DECLARE category_count INT;
                SET category_count = (SELECT COUNT(*) FROM expense_has_category WHERE expense_id = NEW.expense_id);
                IF category_count = 0 THEN
                    SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'An expense must be associated with at least one category';
                        END IF;
            END$$

            USE `budgetdb`$$
            CREATE DEFINER = CURRENT_USER TRIGGER `budgetdb`.`budget_BEFORE_INSERT` BEFORE INSERT ON `budget` FOR EACH ROW
                        BEGIN
                DECLARE category_count INT;
                SET category_count = (SELECT COUNT(*) FROM budget_has_category WHERE budget_id = NEW.budget_id);
                IF category_count = 0 THEN
                    SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'A budget must be associated with at least one category';
                        END IF;
            END$$

            USE `budgetdb`$$
            CREATE DEFINER = CURRENT_USER TRIGGER `budgetdb`.`expense_BEFORE_INSERT` BEFORE INSERT ON `expense` FOR EACH ROW
                        BEGIN
                DECLARE category_count INT;
                SET category_count = (SELECT COUNT(*) FROM expense_has_category WHERE expense_id = NEW.expense_id);
                IF category_count = 0 THEN
                    SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'An expense must be associated with at least one category';
                        END IF;
            END$$

            USE `budgetdb`$$
            CREATE DEFINER = CURRENT_USER TRIGGER `budgetdb`.`income_has_category_BEFORE_INSERT` BEFORE INSERT ON `income_has_category` FOR EACH ROW
                        BEGIN
                DECLARE category_count INT;
                SET category_count = (SELECT COUNT(*) FROM income_has_category WHERE income_id = NEW.income_id);
                IF category_count = 0 THEN
                    SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'An income must be associated with at least one category';
                        END IF;
            END$$

            delimiter ;
        </sql>

    </changeSet>

</databaseChangeLog>